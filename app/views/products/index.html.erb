<h1>Products</h1>

<%= form_tag({controller: 'products', action: 'add', method: 'post'}) do %>
    <p>Type in a product to add it to your cart:</p>
    <%= text_field_tag :product %>
    <%= submit_tag "add to cart" %>
<% end %>



<h3>Cart:</h3>
<ul>
    <% cart.each do |product| %>
      <li><%= product %></li>
    <% end %>
</ul>

