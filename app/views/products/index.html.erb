<h1>Products page</h1>

<!-- use the controller 'proucts' -->
<!-- the 'add' method/action on the controller products -->
<!-- and POST to it -->

 <%= form_tag ({controller: 'products',
    action: 'add',
    method: 'post'}) do %>

  <input name=product>
  <input type=submit value='add to cart'>
<% end %>
      
<ul>  
  <%= cart.each do |product| %>
    <li><%= product %></li>
  <% end %>
</ul>